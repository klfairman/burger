<div class="container bg">
	
	<div class="row">
	    <div class="center col-sm-12">
			<img src="assets/img/burger.png" alt="Burger App">
	        <h1>Eat a Burger</h1>
	        <p></p>
	    </div>
  	</div>
	<!-- end .row -->

	<div class="row">
	    <div class="col-sm-6">

			<br>
			<h2>Burger Menu</h2>

			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			        <form action="/{{this.id}}?_method=PUT" method="POST">
			          <input type="hidden" name="devoured" value="true">
			          <button class="btn-primary" type="submit">Eat Your Burger</button>
			        </form>

			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>

	    </div>

	    <div class="col-sm-6">

			<h2>Burgers Consumed</h2>
			
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			      </li>
			    {{/if}}
			  {{/each}}
			
	    </div>

  	</div>
	<!-- end .row -->

	<div class="row">
	    <div class="center col-sm-12">

			<h2>Add a Burger</h2>

			<form class="create-update-form" action="/" method="POST">

			  <div class="form-group">
			    <p>Place and order for a burger you would like in the space below and click Submit Order</p>
			    <input type="text" id="ca" name="burger_name">
			  </div>
			  
			  <button class="btn-primary" type="submit">Submit Order</button>
			</form>

	    </div>
	
  	</div>
	<!-- end .row -->

</div>

